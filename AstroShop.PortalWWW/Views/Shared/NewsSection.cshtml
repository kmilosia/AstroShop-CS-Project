@model IEnumerable<AstroShop.Data.Data.CMS.News>
<div class="vstack m-4 text-light">
    <h3 class="text-center mt-2 mb-2 display-4">News</h3>
    <h4 class="text-center mt-2 mb-2 display-6">Get inspired with the latest news about Astrophotography! Everything from new equipment to the newly discovered techniques.</h4>
    <div class="row mx-0 my-sm-4 my-md-5 text-dark">
        @foreach(var item in Model)
        {
            <div class="col-sm-12 col-md-4 my-2">
                <div class="card mx-auto w-100 bg-light">
                    <img src="@item.ImageURL" class="card-img-top" style="object-fit: cover; height: 30vh">
                    <div class="card-body text-center p-2">
                        <h6 class="bold m-2">
                            @item.CreationDate
                        </h6>
                        <h4 class="card-title m-2">
                            @Html.ActionLink(item.Title, "Index", "News", new {id=item.IDNews},new {@class= "nav-link text-dark"})
                        </h4>
                        <p class="card-text m-2 text-dark">
                            @item.Heading
                        </p>
                        @Html.ActionLink("Read more", "Index", "News",new {id=item.IDNews}, new { @class = "btn btn-info m-2"})
                    </div>
                </div>
            </div>
        }      

    </div>
</div>
