@model IEnumerable<AstroShop.Data.Data.CMS.Page>

@{
    ViewData["Title"] = "Index";
}

<div class="dark-theme-primary-bg">
    <div class="swift-window pad-2 mar-top-2 mar-bottom-2 flex-center flex-column" style="width: auto;">
        <div class="pad-2 flex-center flex-column" style="width: 70%;">
            <h3 class="bolder mar-1">Pages</h3>
            <h4 class="mar-1 center">Administrate the pages on AstroShop website</h4>
            <a asp-action="Create" class="create-button mar-1">Create new</a>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="col s12 m4 mar-bottom-2 pad-1" style="padding-left: 0rem;">
            <div class="swift-window flex-column" style="padding: 3rem;">
                <h4 class="mar-1" style="margin-left: 0rem;">
                    @Html.DisplayFor(modelItem => item.Title)
                </h4>
                <h5 class="mar-1" style="margin-left: 0rem;">
                    @Html.DisplayFor(modelItem => item.LinkTitle)
                </h5>
                <a asp-action="Details" asp-route-id="@item.IDPage" class="dark-theme-accent mar-1 bolder" style="margin-left: 0rem;">Read more details..</a>
                <div>
                    <a asp-action="Edit" asp-route-id="@item.IDPage"><i class="fa-solid fa-pen-to-square dark-theme-accent fs-15 mar-1"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.IDPage"><i class="fa-solid fa-trash dark-theme-accent fs-15 mar-1"></i></a>
                </div>
            </div>
        </div>
    }
</div>
